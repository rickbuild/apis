              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "associated_articles": {
                      "type": "array",
                      "items": {
                        "type": "string",
                        "example": "562c5821b5f0"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/{user_id}/interests": {
      "get": {
        "summary": "Get User's Interests",
        "description": "Returns a list of tags that the given user follows.\n",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
